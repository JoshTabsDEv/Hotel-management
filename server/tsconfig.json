{
  // Visit https://aka.ms/tsconfig to read more about this file
    "compilerOptions": {
      "rootDir": "src",
      "outDir": "dist",
      "module": "commonjs",
      "target": "es2019",
      "lib": ["es2020"],
      "types": ["node"],
      "sourceMap": true,
      "declaration": true,
      "declarationMap": true,
      "noUncheckedIndexedAccess": true,
      "exactOptionalPropertyTypes": true,
      "strict": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "resolveJsonModule": true
    }
  }
